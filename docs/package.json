{
  "name": "forrest-starter-universal",
  "description": "Complete SSR boilerplate: cra, ssr, redux, router, multilanguage, graphql",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "----- // START SCRIPTS // -----": "",
    "start": "./node_modules/.bin/concurrently \"npm run start:api\" \"npm run start:cra\"",
    "start:cra": "react-scripts start",
    "start:api": "NODE_ENV=development nodemon --watch ssr -e js --watch build index.dev.js",
    "start:prod": "npm run clean:all && npm run build:all && npm run start:prod:api",
    "start:prod:api": "npm run build:node && NODE_ENV=production node index",
    "----- // CRA DEFAULT SCRIPTS // -----": "",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "./node_modules/.bin/eslint .",
    "----- // SSR CLEAN // -----": "",
    "clean:build:app": "rm -rf build",
    "clean:build:src": "rm -rf ./build-src",
    "clean:build:ssr": "rm -rf ./build-ssr",
    "clean:build:locale": "rm -rf ./build-locale",
    "clean:npm": "rm -rf ./node_modules",
    "clean:all": "npm run clean:build:app && npm run clean:build:src && npm run clean:build:ssr && npm run clean:build:locale",
    "clean": "npm run clean:all",
    "----- // SSR BUILD // -----": "",
    "build:src": "NODE_ENV=production ./node_modules/.bin/babel src --out-dir ./build-src --copy-files",
    "build:ssr": "NODE_ENV=production ./node_modules/.bin/babel ssr --out-dir ./build-ssr",
    "build:locale": "NODE_ENV=development BABEL_ENV=node ./node_modules/.bin/babel src --out-dir ./build-locale && node ./node_modules/@forrestjs/core/lib/react-intl-pack.js",
    "build:node": "npm run build:src && npm run build:ssr",
    "build:all": "npm run build && npm run build:node && npm run build:locale",
    "----- // STYLEGUIDIST // -----": "",
    "styleguide": "BABEL_ENV=development ./node_modules/.bin/styleguidist server",
    "styleguide:build": "BABEL_ENV=development./node_modules/.bin/styleguidist build",
    "----- // GITBOOK // -----": "",
    "book:install": "node_modules/.bin/gitbook install",
    "book:serve": "node_modules/.bin/gitbook serve",
    "book:build": "node_modules/.bin/gitbook build . docs",
    "book:publish": "npm run book:install && npm run book:build && git add ./docs && git commit -m \"gitbook\" && git push",
    "book": "npm run book:install && npm run book:serve",
    "----- // DEPLOY - HEROKU // -----": "",
    "heroku-postbuild": "npm run build:all",
    "heroku:deploy": "git push heroku master",
    "heroku:logs": "heroku logs --tail"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@marcopeg/hooks": "^0.2.2",
    "@forrestjs/core": "^0.0.2",
    "@marcopeg/utils": "^2.0.1",
    "async": "^2.6.2",
    "chokidar": "^3.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "es6-promise": "^4.2.6",
    "express": "^4.16.4",
    "express-graphql": "^0.8.0",
    "express-locale": "^1.2.0",
    "front-matter": "^3.0.2",
    "glob": "^7.1.4",
    "graphql": "^14.2.1",
    "graphql-type-json": "^0.3.0",
    "helmet": "^3.18.0",
    "history": "^4.9.0",
    "isomorphic-fetch": "^2.2.1",
    "js-cookie": "^2.2.0",
    "millisecond": "^0.1.2",
    "node-env-file": "^0.1.8",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-intl": "^2.8.0",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.0.3",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "react-scripts-rewired": "3.0.1--latest1",
    "redux": "^4.0.1",
    "remarkable": "^1.7.1",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-react-intl": "^3.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "concurrently": "^4.1.0",
    "eslint-config-react": "^1.1.7",
    "gitbook-cli": "^2.3.2",
    "nodemon": "^1.19.0",
    "react-styleguidist": "^9.0.9"
  }
}
